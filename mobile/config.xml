<?xml version='1.0' encoding='utf-8'?>
<widget id="com.alexdaltsis.watchamovie" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Watch a movie</name>
    <description>
       A client for watching movie from 'watch-a-movie-server'
    </description>
    <author email="alexdaltsis@gmail.com" href="https://github.com/AlexandrosDa007/watch-a-movie">
        Apache Cordova Team
    </author>
    <content src="index.android.html" />
    <access origin="*" subdomains="true"/>
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
